#!/bin/bash

main() {
    clear

    if [ -w "/Applications" ]; then
        curl -s "https://raw.githubusercontent.com/norbyv1/OpiumwareInstall/refs/heads/main/ginst.sh" | bash
    else
        echo -e "${YELLOW}[!!] Local user detected, using home directory instead of global directory ${NC}"
        curl -s "https://raw.githubusercontent.com/norbyv1/OpiumwareInstall/refs/heads/main/linst.sh" | bash
    fi
}

main
